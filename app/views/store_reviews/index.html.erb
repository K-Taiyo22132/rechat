<p id="notice"><%= notice %></p>

<h1>お店レビュー</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>画像</th>
      <th>レビュー</th>
      <th>場所</th>
      <th>電話番号</th>
      <th>カテゴリー</th>
      <th>評価</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @store_reviews.each do |store_review| %>
      <tr>
        <td><%= store_review.title %></td>
        <%# <td><%= store_review.review_image %></td>
        <td><%= image_tag(url_for(image_of_store_reviews_path(store_review)),size:'100x100') %></td> 
        <td><%= store_review.review %></td>
        <td><%= store_review.spot %></td>
        <td><%= store_review.tell %></td>
        <td><%= store_review.category.name %></td>
        <td><%= store_review.evaluation %></td>
        <td><%= link_to 'Show', store_review %></td>
        <td><%= link_to 'Edit', edit_store_review_path(store_review) %></td>
        <td><%= link_to 'Destroy', store_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'お店レビュー投稿', new_store_review_path %> 
