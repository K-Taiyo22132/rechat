<h1>グループレビュー</h1>

 <div class="row"> 
    <% @select_categories.each do |category| %>
       
           <div class="col-md-4 text-center">
            
          
              <td><%= image_tag(url_for(image_of_categories_path(category.category_id)), size: '100x100') %></td>
            
             
          </div>
        
     <% end %> 
 </div> 
<table>
  <thead>
    <tr>
      <%# <th>Category</th>
      <th>Group</th>
      <th>Store review</th>
      <th>Goods review</th>
      <th>User</th> %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_reviews.each do |group_review| %>
      <tr>
        <td><%= group_review.category_id %></td>
        <td><%= group_review.group_id %></td>
        <td><%= group_review.store_review_id %></td>
        <td><%= group_review.goods_review %></td>
        <td><%= group_review.user_id %></td>
        <td><%= link_to 'Show', group_review %></td>
        <td><%= link_to 'Edit', edit_group_review_path(group_review) %></td>
        <td><%= link_to 'Destroy', group_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

