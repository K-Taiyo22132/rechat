<h1>アカウント登録</h1>
<%= form_with model: @user, url: signup_path, local: true do |form| %>
    <% if @user.errors.any? %>
        <strong><%= @user.errors.count %>個のエラーがあります</strong>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end%>
        </ul>
    <% end%>

    <p><%= form.label :email, 'メールアドレス' %>
    <%= form.email_field :email, class: "form-control" %></p>

    <p><%= form.label :password, 'パスワード' %>
    <%= form.password_field :password, class: "form-control" %></p>

    <p><%= form.label :password_confirmation, 'パスワード（確認）' %>
    <%= form.password_field :password_confirmation, class: "form-control" %></p>
    <%= form.label :occupation, '職種' %>
    <%= form.select :occupation_id,Occupation.all.map { |occupation|[occupation.name, occupation.id]}, {}, class: "form-control" %>
    <br>
    <div class="d-grid gap-2">
    <%= form.submit '登録', class: "btn btn-primary" %>
    </div>
        <br>
    <p class="text-end">アカウントをお持ちですか？<%= link_to "ログインする",login_path%></p>
<% end %>

<style>
h1{
    text-align: center;
}