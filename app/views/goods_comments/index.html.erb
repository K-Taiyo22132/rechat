<p id="notice"><%= notice %></p>

<h1>Goods Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Goods review</th>
      <th>User</th>
      <th>Evaluation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goods_comments.each do |goods_comment| %>
      <tr>
        <td><%= goods_comment.comment %></td>
        <td><%= goods_comment.goods_review_id %></td>
        <td><%= goods_comment.user_id %></td>
        <td><%= goods_comment.evaluation %></td>
        <td><%= link_to 'Show', goods_comment %></td>
        <td><%= link_to 'Edit', edit_goods_comment_path(goods_comment) %></td>
        <td><%= link_to 'Destroy', goods_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

