<div class="container">
  <div class="row"style=margin-bottom:100px>
    <div class="col-md-3"></div>

    <p id="notice"><%= notice %></p>
    <h1>ホーム</h1>
     

    
    <%= form_tag(chats_path, method: :get) do %>
      <%= text_field_tag "search[keyword]", nil, placeholder: "🔍 検索", class: "form-control" %>
      <br>
    <% end %>
    

  
  


    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @chats.each do |chat| %>
          <tr>
            <td>
              <%= link_to(
                image_tag(
                  url_for(image_of_groups_path(chat.group.id)),
                  size: '100x100',
                  style: 'border-radius: 50%; object-fit: cover; width: 100px; height: 100px;'
                ),
                group_path(chat.group.id)
              ) %>
            </td>
            <td>
              <%= link_to chat.group.name, chat_path(id: chat.id, group_id: chat.group.id), style: "font-size: 20px;" %>
            </td>
            <td>
              <%= link_to '退出する', chat, method: :delete, data: { confirm: 'グループを退会しますか？' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%# <%= link_to 'プロフィール設定', profile_path(current_user.id) %>
    <%= link_to 'ほかのグループに参加', groups_path %>
  </div>
</div>


