<div style="display: flex; align-items: center;">
  <%= link_to "＜", chats_path, class: "back-button", style: "margin-right: 10px;" "font-size: 30px;" %>
  <h1>グループ参加</h1>
</div>

    <%= form_tag(groups_path,method: :get) do %>
      
      <%= text_field_tag "search[keyword]",nil,class: "form-control" %><%= submit_tag "検索" %>
    <% end %>
   
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to image_tag(url_for(image_of_groups_path(group)),size:'70x70'), group %></td> 
        <td><%= group.name %></td>
        <td><%= group.introduction %></td>
        
        <%# <td><%= link_to 'Edit', edit_group_path(group) %><%# </td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %><%# </td>
        <td><%= link_to 'Show', group %><%# </td>%>
      </tr>
    <% end %>
  </tbody>
</table>

