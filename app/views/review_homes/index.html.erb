<p id="notice"><%= notice %></p>

<h1> レビューホーム</h1>

  <%= form_tag(review_homes_path,method: :get) do %>
      
      <%= text_field_tag "search[keyword]",nil,class: "form-control" %><%= submit_tag "検索" %>
  <% end %>
 <div class="row">
    <% @select_categories.each do |category| %>
       
          <div class="col-md-4 text-center">
            
          
              <td><%= image_tag(url_for(image_of_categories_path(category.category_id)), size: '100x100') %></td>
            
            
          </div>
        
    <% end %>
 </div>

  <div class="row">
    <% @goods_review.each do |goods_review| %>
       
          <div class="col-md-6">
            <table>
              <tr>
              <td><%= image_tag(url_for(image_of_goods_reviews_path(goods_review)),size:'100x100') %></td>
              </tr>
              <tr>
              <td><%= goods_review.title%></td>
              </tr>
              <tr>
              <td><%= goods_review.review%></td>
              </tr>
            </table>
            
            
            
          </div>
        
    <% end %>
    <% @store_review.each do |store_review| %>
       
          <div class="col-md-6">
            <table>
              <tr>
              <td><%= image_tag(url_for(image_of_store_reviews_path(store_review)),size:'100x100') %></td>
              </tr>
              <tr>
              <td><%= store_review.title%></td>
              </tr>
              <tr>
              <td><%= store_review.review%></td>
              </tr>
            </table>
            
            
            
          </div>
        
    <% end %>
 </div>

 
     