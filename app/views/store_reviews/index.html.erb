<h1>お店レビュー</h1>

<div class="container mt-4">
  <div class="row">
    <% @store_reviews.each do |store_review| %>
      <div class="col-md-4">
        <a href="<%= store_review_path(store_review) %>" class="text-decoration-none">
          <div class="card mb-4" style="cursor: pointer;">
            <%= image_tag(url_for(image_of_store_reviews_path(store_review)), class: "card-img-top custom-image") %>
            <div class="card-body">
              <h5 class="card-title text-dark"><%= store_review.title %></h5>
              <%# <p class="card-text text-muted"><%= truncate(store_review.review, length: 200) %>
            </div>
            <div class="card-footer text-muted">
              <%= time_ago_in_words(store_review.created_at) %> 前
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>

<br><br>

<%= link_to 'お店レビュー投稿', new_store_review_path, class: "btn btn-light" %>

<style>
  .card {
    height: 200px;
  }

  .custom-image {
    width: 100%;
    height: 100px;
    object-fit: cover;
  }

  .card-title {
    font-size: 1.25rem;
  }

  .card-text {
    font-size: 0.9rem;
  }

  .card:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transform: scale(1.02);
    transition: 0.3s;
  }
</style>

